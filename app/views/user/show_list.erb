
<p> Welcome, <%= current_user.name %>.</p>
<h2> Your Wish List </h2>

<% if @items.any? %>
  <% @items.each do |item| %>
    <div>
      <%= item.name %>
      <%= item.link %>
      <%= item.price %>
    </div>
  <% end %>
  <br>
  <a href="/<%=@user.slug%>/list/add">Add more stuff!</a>
<% else %>
  <p>Your list is empty! Click <a href="/<%=@user.slug%>/list/add">here</a> to add an item.</p>
<% end %>
